<h3>Plantilla: <i>{{ lp.descripcion }}</i></h3>

<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Fecha</th>
                <th>NÃºmero</th>
                <th>Cambios realizados</th>
                <th>Descargar</th>
            </tr>
            <tbody>
                {% for g in generados %}
                    <tr>
                        <td class="text-right">{{ g.fecha|date("d/m/Y") }}</td>
                        <td class="text-right">{{ g.numero }}</td>
                        <td>{{ g.cambios }}</td>
                        <td><a href="{{ urlFor('LP:download', { id: g.id }) }}">Descargar</a></td>
