<div class="modal fade" tabindex="-1" role="dialog" id="modal-documento">
    <div class="modal-dialog">
        <div class="modal-content">
            <form class="form" id="form-documento" action="{{ urlFor('Proveedor:saveDocumento') }}" method="post" enctype="multipart/form-data" autocomplete="off">
                {{ form.hidden('documento-proveedor-id', proveedor.id) }}
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Nuevo documento</h4>
                </div>
                <div class="modal-body">
                    <div class="alert alert-danger" role="alert" id="mensaje-documento" style="display:none"></div>
                    <div class="row">
                        <div class="form-group required col-sm-6">
                            {{ form.label('documento-fecha', 'Fecha', { class: 'control-label' }) }}
                            <div class="input-group">
                                {{ form.text('documento-fecha', null, { class:'form-control fecha', required:'' }) }}
                                <div class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group required col-sm-6">
                            {{ form.label('documento-aumento', 'Aumento', { class: 'control-label' }) }}
                            {{ form.text('documento-aumento', null, { class: 'form-control', required:'' }) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group required col-sm-12">
                            {{ form.label('documento-archivo', 'Archivo', { class: 'control-label' }) }}
                            {{ form.file('documento-archivo', { required:'' }) }}
                        </div>
                    </div>
                    <div id="progreso" class="progress" style="display: none;">
                        <div id="progreso-barra" class="progress-bar" role="progressbar" style="width: 0%;"></div>
                    </div>
                </div>
                <div class="modal-footer">
                    {{ form.submit('btn-documento-guardar', 'Guardar', { class:'btn btn-success' }) }}
                    {{ form.button('btn-documento-cancelar', 'Cancelar', { class:'btn btn-default', 'data-dismiss':'modal' }) }}
                </div>
            </form>
        </div>
    </div>
</div>
