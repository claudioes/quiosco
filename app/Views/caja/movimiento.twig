{% import 'template/macro/form.twig' as form %}

<form class="form-horizontal" id="form-movimiento" action="{{ urlFor('Caja:saveMovimiento') }}" method="post" autocomplete="off">
    <div class="form-group required">
        {{ form.label('movimiento-tipo', 'Tipo', { class: 'control-label col-sm-2' }) }}
        <div class="col-sm-10">
            {{ form.select('movimiento-tipo', { 'E':'Entrada', 'S':'Salida' }, null, { class: 'form-control', required: '' }) }}
        </div>
    </div>

    <div class="form-group required">
        {{ form.label('movimiento-cobrador', 'Cobrador', { class: 'control-label col-sm-2' }) }}
        <div class="col-sm-10">
            {{ form.select('movimiento-cobrador', cobradores, null, { class: 'form-control', required: '' }) }}
        </div>
    </div>

    <div class="form-group required">
        {{ form.label('movimiento-detalle', 'Detalle', { class: 'control-label col-sm-2' }) }}
        <div class="col-sm-10">
            {{ form.text('movimiento-detalle', null, { class: 'form-control', required: '' }) }}
        </div>
    </div>

    <div class="form-group">
        {{ form.label('movimiento-importe', 'Importe', { class: 'control-label col-sm-2' }) }}
        <div class="col-sm-4">
            <div class="input-group">
                <div class="input-group-addon">$</div>
                {{ form.text('movimiento-importe', null, { class: 'form-control', required: '' }) }}
            </div>
        </div>
    </div>
</form>

<script>
    $(function() {
        Caja.initMovimiento();
    });
</script>
