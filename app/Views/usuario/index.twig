{% extends "template/base.twig" %}

{% block jsapp %}
    <script src="{{ siteUrlWithVersion('js/app/usuario.js') }}"></script>
    <script>
        Usuario.IndexView();
    </script>
{% endblock %}

{% block content %}
    <h1>Usuarios</h1>

    <div id="toolbar" class="btn-group" role="group">
        <a href="{{ urlFor('Usuario:create') }}" class="btn btn-success">
            <i class="glyphicon glyphicon-plus"></i> Nuevo
        </a>
    </div>

    <div class="table-responsive">
        <table id="table" class="table table-bordered table-hover" data-order="[[ 0, &quot;desc&quot; ]]">
            <thead>
                <tr>
                    <th class="w100" data-data="usuario">Nombre de usuario</th>
                    <th data-data="email">E-Mail</th>
                    <th data-data="accion" data-searchable="false" data-sortable="false"></th>
                </tr>
            </thead>
        </table>
    </div>
{% endblock %}
